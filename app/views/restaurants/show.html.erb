
<%= @restaurant.name %>
<%= @restaurant.address %>
<%= @restaurant.category %>

<ul>
  <% @restaurant.reviews.each do | review | %>
  <li> <%= review.content %> </li>
  <li> <%= "⭐️" * review.rating %> </li>
  <% end %>
</ul>

<h2><%= link_to "Add review", new_restaurant_review_path(@restaurant) %>
<h2> <%= link_to "Back to restaurant list", restaurants_path %></h2>
